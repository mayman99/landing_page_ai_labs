<body>
  <nav class="navbar navbar-dark bg-success">
    <a class="navbar-brand" href="#">
      <!-- <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt=""> -->
      UltraClear
    </a>
  </nav>
  <div class="container">

    <div class="row p-3">
      <h1 class="fs-1 text-center">Scale super giant images</h1>
    </div>
    <div class="row p-3">
      <form action="/upload" id="uploadForm" method="post" enctype="multipart/form-data">
        <div class="input-group mb-3">
          <input id="upload-pattern-input" type="file" name="image" accept="*" class="form-control">
        </div>
      </form>
    </div>
    <div class="row p-3">
      <p class="fs-4 text-left">Select the scaling factor to use</p>
      <div class="col">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="2">
          <label class="form-check-label" for="inlineRadio1">2</label>
        </div>
      </div>
      <div class="col">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="3">
          <label class="form-check-label" for="inlineRadio2">3</label>
        </div>
      </div>
      <div class="col">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="4">
          <label class="form-check-label" for="inlineRadio3">4</label>
        </div>
      </div>
      <div class="col">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="8">
          <label class="form-check-label" for="inlineRadio3">8</label>
        </div>
      </div>
    </div>
    <div class="row p-3">
      <button class="btn btn-success btn-block btn-lg" type="button" id="texture_text_button"
        onclick="fetchData()">Upload and
        Scale</button>

    </div>

    <div class="row" id="processing_status_row" style="display: none;">
      <p id="status" class="fs-1 text-center">Position in Queue: 1</p>
      <div class="progress">
        <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar"
          aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 1%" id="progress_bar"></div>
      </div>
    </div>

    <div class="row p-3" id="results_row" style="display: none;">
      <button class="btn btn-lg btn-success btn-block" id="download_btn" type="button" disabled>Download</button>
      <a id="downloadLink" style="display: none;" download>
      </a>
    </div>

  </div>
  <!-- Vendor JS Files -->
  <script src="assets/vendor/aos/aos.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="assets/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="assets/js/main.js"></script>

</body>

</html>